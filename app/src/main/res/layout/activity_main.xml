<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/container_id"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Compras"
            android:drawableTop="@drawable/cart"
            android:textAllCaps="false"
            android:textColor="@color/branco"
            android:background="@color/laranja"
            android:id="@+id/botao_compras_id"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Listas Salvas"
            android:drawableTop="@drawable/list"
            android:textAllCaps="false"
            android:textColor="@color/branco"
            android:background="@color/laranja"
            android:id="@+id/botao_lista_id"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Promocoes"
            android:drawableTop="@drawable/hot"
            android:textAllCaps="false"
            android:textColor="@color/branco"
            android:background="@color/laranja"
            android:id="@+id/botao_promocoes_id"/>



    </LinearLayout>











</LinearLayout>